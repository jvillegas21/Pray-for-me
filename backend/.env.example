# Database
MONGODB_URI=mongodb://localhost:27017/prayer_community
MONGODB_URI_TEST=mongodb://localhost:27017/prayer_community_test

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Bible API
BIBLE_API_KEY=your_bible_api_key
BIBLE_API_URL=https://api.scripture.api.bible/v1

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email (for notifications)
EMAIL_FROM=noreply@prayercommunity.com
SENDGRID_API_KEY=your_sendgrid_api_key

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# Google Places API (for church finder feature)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here